{

  "manifest_version": 2,
  "name": "Smokescreen",
  "version": "1.0",

  "description": "redirects web pages",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*", "*://*.simpleweb.org/*", "file:///Users*"],
      "js": ["axios.js", "jquery.js", "indicator.js","smokescreen.js"]
    }
  ],
  "permissions":[
    "webRequest"
  ],

  "background": {
    "scripts": ["jquery.js", "overlord.js", "bundle.js"]
  },
  "web_accessible_resources":[
    "smokescreen.js",
    "starting-page.html"
  ]
}
